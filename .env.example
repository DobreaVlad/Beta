# Environment Variables
# Copy this to .env for local development
# On Railway, set these in the dashboard

# Database Configuration
# For Railway: Use MYSQL_URL from the MySQL plugin (set in Railway dashboard)
# For Local: Use individual DB_* variables
# MYSQL_URL=mysql://user:pass@host:port/database  (Railway - auto-provided by MySQL plugin)
DB_HOST=localhost
DB_NAME=beta
DB_USER=root
DB_PASS=

# Email Configuration (use a service like SendGrid, Mailgun, or AWS SES)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_FROM=noreply@yourdomain.com

# Application Configuration
APP_ENV=production
APP_BASE_URL=https://your-app.railway.app

# Stripe Payment Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Railway automatically provides PORT variable
# PORT=8080

